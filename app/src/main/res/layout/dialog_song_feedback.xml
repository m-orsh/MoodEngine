<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/heaviness_text"
        android:text="Heaviness"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/heaviness_radio_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/hlittle_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Too Low"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:id="@+id/hperfect_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perfect"
            android:checked="true"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:id="@+id/hmuch_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Too Much"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:id="@+id/tempo_text"
        android:text="Tempo"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:id="@+id/tempo_radio_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <RadioButton
            android:id="@+id/tlittle_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Too Low"/>
        <RadioButton
            android:id="@+id/tperfect_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perfect"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/tmuch_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Too Much"/>
     </RadioGroup>

    <TextView
        android:id="@+id/complexity_text"
        android:text="Complexity"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:id="@+id/compexity_radio_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <RadioButton
            android:id="@+id/clittle_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Too Low"/>
        <RadioButton
            android:id="@+id/cperfect_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perfect"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/cmuch_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Too Much"/>
    </RadioGroup>

    <Button
        android:id="@+id/submit_button"
        android:text="Submit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:background="#313131"
        android:layout_marginBottom="10dp"
        android:textSize="15dp" />
</LinearLayout>